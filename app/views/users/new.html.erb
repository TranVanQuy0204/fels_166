<% provide :title, t("signup_title") %>
<h1><%= t "signup_title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: {multipart: true}) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("confirm_password_btn") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <span class="picture">
        <%= f.file_field :avatar, accept:Settings.avatar_accept_file %>
      </span>
      <%= f.submit t("signup_submit_btn"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

