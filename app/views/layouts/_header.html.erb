<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("homepage_link"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("user.users_index"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "home.acc_name" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li><%= link_to t("user.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
