<% provide :title, t("user.lesson.title") %>
<div class="row">
  <div class="col-md-12">
    <div class="ed_teacher_div">
      <div class="row">
        <div>
          <%= @lesson.created_at %>
          <br>
          <span>
            <h4><%= t "user.lesson.your_score " %></h4>
            <%= @lesson.score %>
          </span>
        </div>
        <h1><%= t "user.lesson.question_title"%></h1>
        <%= form_for @lesson do |f| %>
          <ol>
            <%= f.fields_for :results do |builder| %>
              <%= render "result", f: builder %>
            <% end %>
          </ol>
        <% end %>
      </div>
    </div>
  </div>
</div>
