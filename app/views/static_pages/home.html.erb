<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="ed_teacher_div">

      <div class="row">
        <% if logged_in? %>
          <h2 class="text-center"><%= t ".activity" %></h2>
          <%= render @activities %>
          <%= will_paginate @activities %>
        <% else %>
        <div class="center">
          <h1><%= t "home.msg" %></h1>
          <%= link_to t("signup_link"), signup_path, class: "btn btn-lg btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
