<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <%= t "error_signup_msg" %>
      <%= pluralize object.errors.count, t("error_unit") %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
