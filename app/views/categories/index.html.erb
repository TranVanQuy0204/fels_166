<% provide :title, t("category.title_index") %>
<div class="row">
  <div class="col-md-12">
    <div class="ed_teacher_div">
      <div class="row">
        <h2 class="text-center"><%= t "category.title_index" %></h2>
        <div class="search-form">
          <%= form_tag categories_path, method: :get do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag t("search_btn"), id: "searchbtn" %>
          <% end %>
        </div>
        <div class="table-responsive table-condensed">
          <table class="table">
            <thead>
              <tr>
                <th class="index"></th>
                <th><%= t "admin.category.index.name" %></th>
                <th><%= t "category.total_word" %></th>
                <th><%= t "category.total_lesson" %></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each_with_index do |category, index| %>
                <tr>
                  <td><%= index.to_i + 1 %></td>
                  <td><%= category.name %></td>
                  <td><%=  %></td>
                  <td><%=  %></td>
                  <td>
                    <%= link_to t("user.show.create_exam"),
                      category_lessons_path(category), method: :post %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        </ul>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
