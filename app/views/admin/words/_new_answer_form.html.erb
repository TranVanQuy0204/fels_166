<div class="row">
  <%= f.fields_for :word_answers do |ff| %>
    <div class="form-group">
      <div class="col-md-9">
        <%= ff.label :content %>
        <%= ff.text_field :content, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= ff.label :is_correct %>
        <%= ff.check_box :is_correct %>
      </div>
    </div>
  <% end %>
</div>
