<tr>
  <td><%= word_counter + 1 %></td>
  <td><%= word.content %></td>
  <td>
    <div class="row show_word_answer_<%= word.id %>"></div>
    <div class="row text-center">
      <%= link_to "", admin_word_word_answers_path(word),
      title: t(".word_answer"), class: "glyphicon glyphicon-eye-open",
      id: "show_word_answer", onclick: "return show_word_answer(this)" %>
    </div>
  </td>
  <td>
    <%= link_to "", admin_word_path(word), title: t(".detail"),
      class: "glyphicon glyphicon-check" %>
  </td>
  <td>
    <%= link_to "", edit_admin_word_path(word), title: t(".edit"),
      class: "glyphicon glyphicon-edit" %>
  </td>
  <td>
    <%= link_to "", admin_word_path(word), title: t(".delete"),
      data: {confirm: t(".confirm")},
      class: "glyphicon glyphicon-trash" %>
  </td>
</tr>
