<tr>
  <td><%= word_counter + 1 %></td>
  <td><%= word.content %></td>
  <td>
    <div class="row show_word_answer_<%= word.id %>"></div>
    <div class="row text-center">
      <%= link_to admin_word_word_answers_path(word),
        class: "show-word-answer-show", onclick: "return false",
        title: t(".word_answer"),  id: "show_word_answer" do %>
        <span class="glyphicon glyphicon-eye-open "></span>
      <% end %>
    </div>
  </td>
  <td>
    <%= link_to edit_admin_word_path(word), title: t(".edit") do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_word_path(word), title: t(".delete"), method: :delete,
      data: {confirm: t(".confirm")} do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
